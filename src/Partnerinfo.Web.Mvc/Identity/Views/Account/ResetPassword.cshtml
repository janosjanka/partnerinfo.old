@model LoginBindingModel
<div class="ui-container-fluid ui-color-2">
    <div class="ui-container">
        <div class="ui-row">
            <div class="ui-col-sm-5 ui-col-sm-offs-3">
                <div role="article" class="ui-box ui-box-bordered">
                    <div role="heading" class="ui-box-header">
                        <h2>@IdentityAppResources.Account_ChangePassword</h2>
                    </div>
                    <div role="group" class="ui-box-group">
                        <form method="post" action="@Url.Action("resetpassword", "account")">
                            <table class="ui-table ui-table-sm">
                                <colgroup>
                                    <col style="width: 80px" />
                                    <col />
                                </colgroup>
                                <tbody>
                                    @if (Model.PasswordToken == null)
                                    {
                                        <tr>
                                            <td>@Html.LabelFor(m => m.Email)</td>
                                            <td>@Html.TextBoxFor(m => m.Email)</td>
                                        </tr>
                                        <tr>
                                            <td class="ui-text-center" colspan="2">
                                                <button class="ui-btn ui-btn-success" type="submit">
                                                    <span>Küldés</span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>@Html.LabelFor(m => m.Password)</td>
                                            <td>@Html.PasswordFor(m => m.Password)</td>
                                        </tr>
                                        <tr class="ui-hidden">
                                            <td colspan="2">
                                                @Html.HiddenFor(m => m.PasswordToken)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="ui-text-center" colspan="2">
                                                <button class="ui-btn ui-btn-success" type="submit">
                                                    <span>Mentés</span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="2">
                                            @Html.ValidationSummary()
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>